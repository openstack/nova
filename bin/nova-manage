class VersionCommands(object):
    """Class for exposing the codebase version."""

    def __init__(self):
        pass

    def list(self):
        print _("%(version)s (%(vcs)s)") % \
                {'version': version.version_string(),
                 'vcs': version.version_string_with_vcs()}

